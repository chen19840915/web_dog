mixin CreateBox(title, content, button, imgName)
    .box
        .content
            h1=title
            p=content
            a(href="#")=button
        .picture
            img(src=imgName)

<!DOCTYPE html>
html(lang="zn")
    head
        meta(charset="UTF-8") 
        title Document
    body
    include nav.pug

    +CreateBox("標題", "內容", "按鈕", "dog.jpg")